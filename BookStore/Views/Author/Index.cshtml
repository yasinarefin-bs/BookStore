@{
}
@model IEnumerable<Author>
<h1>List of authors</h1>

<a class="btn btn-info" asp-action="Create"> Add new author</a>


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model) {
                <tr>
                    <td>
                        @author.Name
                    </td>
                    <td>
                        @author.Address
                    </td>
                    <td>
                        @author.CreatedAt
                        
                    </td>
                    <td>
                        <div class="btn-group w-75" role="group">
                            <a asp-action="Details" asp-route-id="@author.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Details</a>
                            <a asp-action="Edit" asp-route-id="@author.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-action="Delete" asp-route-id="@author.Id" class="btn btn-danger mx-2"><i class="bi bi-trash"></i> Delete</a>
                           
                        </div>
                        
                    </td>
                </tr>
        }
    </tbody>
</table>

