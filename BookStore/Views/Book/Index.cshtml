@{
}
@model IEnumerable<BookStore.Models.DbModels.Book>

<partial name="_InfoMessage" />

<h1>List of books</h1>

<a class="btn btn-info" asp-action="Create"> Add new book</a>


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Language)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model) {
                <tr>
                    <td>
                        @book.Name
                    </td>
                    <td>
                        @book.Language
                    </td>
                    <td>
                        @book.Author.Name
                        
                    </td>
                    <td>
                        <div class="btn-group w-75" role="group">
                            <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Details</a>
                           @* <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-action="Delete" asp-route-id="@book.Id" class="btn btn-danger mx-2"><i class="bi bi-trash"></i> Delete</a>*@
                           
                        </div>
                        
                    </td>
                </tr>
        }
    </tbody>
</table>



