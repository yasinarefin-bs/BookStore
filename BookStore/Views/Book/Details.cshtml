@model BookStore.Models.DbModels.Book

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="row">
        <div class="col-md-4">
          <img src="@Model.CoverPicUrl" class="img-fluid rounded-circle">
        </div>
        <div class="col-md-8">
          <h1>@Model.Name</h1>
          <p>Author: <a asp-controller="Author" asp-action="Details" asp-route-id="@Model.Author.Id">@Model.Author.Name</a><br>
          Email: @Model.Author.Email</p>
          <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary">Update</a>
          <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">Delete</button>
        </div>
      </div>

<hr />

<h5>Description</h5>
<p>@Model.Description</p>



<!-- Modal -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Confirm delete</h5>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
         <h6>Confirm that you want to delete this book.</h6>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <form method="post" asp-action="Delete" asp-route-id="@Model.Id">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
        
      </div>
    </div>
  </div>
</div>

